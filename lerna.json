{
  "packages": [
    "packages/*"
  ],
  "version": "0.1.0",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "init": {
      "exact": true
    },
    "publish": {
      "npmClient": "yarn",
      "message": "chore(release): %s [ci skip]",
      "ignoreChanges": [
        "**/*.spec.ts"
      ]
    }
  }
}
