{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "lib": ["dom", "esnext"],
    "plugins": [
      { "transform": "@zerollup/ts-transform-paths" }
    ]
  },
  "exclude": [
    "lib",
    "node_modules",
    "**/*.spec.ts"
  ]
}
